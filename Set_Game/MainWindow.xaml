<Window x:Class="Set_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="840">
    <Grid Name="MainGrid" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="600" />
        </Grid.ColumnDefinitions>
        <StackPanel Name="Controls" Grid.Column="0">
            <TextBlock Name="ScoreTextBlock">Punkte: 0</TextBlock>
            <TextBlock Name="CardsInDeckTextBlock">Verbleibende Karten im Deck: 81</TextBlock>
            <Button Name="noSetAvailable" Content="Kein mögliches Set!" Width="120" Margin="5" Click="noSetAvailable_Click"/>
            <Button Name="logTableButton" Content="Log Table" Width="75" Click="logTableButton_Click" Margin="5"/>
            <Button Name="checkAvailableSetButton" Content="Hilfe!" Width="120" Click="checkAvailableSetButton_Click"/>
            <Button Name ="newGameButton" Content="Neues Spiel"/>
        </StackPanel>
        <WrapPanel Name="gameArea" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            
        </WrapPanel>
    </Grid>
</Window>
